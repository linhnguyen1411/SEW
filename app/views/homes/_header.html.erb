<header class="">
  <div class="container">
      <a href="index.html" class="site-logo">
          <i class="gi gi-flash"></i> <strong>SEW</strong>
      </a>
      <nav>
          <a href="javascript:void(0)" class="btn btn-default site-menu-toggle visible-xs visible-sm">
              <i class="fa fa-bars"></i>
          </a>
          <ul class="site-nav">
              <li class="visible-xs visible-sm">
                  <a href="javascript:void(0)" class="site-menu-toggle text-center">
                      <i class="fa fa-times"></i>
                  </a>
              </li>
              <% @cate_groups.each do |ctg| %>
                <li >
                  <a href="javascript:void(0)" class="site-nav-sub"><i class="fa fa-angle-down site-nav-arrow"></i><%= ctg.name%></a>
                  <ul>
                    <% ctg.categories.each do |c| %>
                      <li>
                        <a href="#"><%= c.name%></a>
                      </li>
                    <% end %>
                  </ul>
                </li>
              <% end %>
              <% if signed_in? %>
                <% if current_user.present? %>
                <li>
                  <a href="javascript:void(0)" class="site-nav-sub""><i class="fa fa-angle-down site-nav-arrow"></i>Welcome : <%=current_user.name%></a>
                    <ul>
                      <li>
                          <%= link_to "Trang cá nhân", profile_path %>
                      </li>
                      <li>
                         <%=link_to "Đăng xuất", destroy_user_session_path,:method => :delete %>
                      </li>
                  </ul>
                </li>
                <% elsif current_admin.present? %>
                  <li>
                    <a href="javascript:void(0)" class="site-nav-sub""><i class="fa fa-angle-down site-nav-arrow"></i>Welcome :  Admin</a>
                    <ul>
                      <li><%= link_to "Get News", new_news_path, remote: :true%></li>
                      <li><%= link_to "Admin Pages", rails_admin_path%></li>
                      <li>
                        <%=link_to "Đăng xuất", destroy_admin_session_path,:method=> :delete %>
                      </li>
                    </ul>
                  </li>
                <% end %>
              <%else%>
                <li>
                  <%=link_to "Đăng nhập", new_user_session_path %>
                </li>
              <%end%>
          </ul>
          <!-- END Main Menu -->
      </nav>
      <!-- END Site Navigation -->
  </div>
</header>
