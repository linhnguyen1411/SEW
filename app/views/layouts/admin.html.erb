<!DOCTYPE html>
<html>
  <head>
    <title>SEW</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico'%>
  </head>
<body>
  <div id="page-container">
    <%= render "layouts/admin_header" %>
    <div class="container content-sm">
      <div class="row">
      </div>
      <div class="row">
        <div class="col-md-2" style="background-color: #abfff8">
          <div class="headline-v2"><%= link_to t("admin.site_management"), admins_path, class: "site-management"%></div>
          <!-- Trending -->
          <ul class="list-unstyled blog-trending margin-bottom-50">
              <li>
                <h3><%= link_to t("admin.model.user"), admin_users_path %></h3>
              </li>
              <li>
                <h3><%= link_to t("admin.model.category_group"), admin_category_groups_path %></h3>
              </li>
              <li>
                <h3><%= link_to t("admin.model.category"), admin_categories_path %></h3>
              </li>
               <li>
                <h3><%= link_to t("admin.model.news_site"), admin_news_sites_path %></h3>
              </li>
              <li>
                <h3><%= link_to t("admin.model.rss"), admin_rss_urls_path %></h3>
              </li>
              <li>
                <h3><%= link_to t("admin.model.news"), admin_news_index_path %></h3>
              </li>
          </ul>
        </div>
        <div class="col-md-10">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
          <div class="tag-box tag-box-v3">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
