<div class="tab-v1">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#list" data-toggle="tab"><%= t "admin.actions.list" %></a></li>
    <li>
      <%= link_to new_admin_news_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i><%= t "add_new" %>
      <% end %>
    </li>
    <li>
      <%= link_to t("admin.news.news_feed"), new_admin_news_path(more_params: "adas")%>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade in active" id="list">
      <div class="panel panel-red margin-bottom-40">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-user"></i><%= t "admin.news.all_news" %></h3>
        </div>
        <div class="panel-body">
          <table class="table">
              <thead>
                  <tr>
                      <th>#</th>
                      <th><%= t "admin.news.title" %></th>
                      <th><%= t "admin.actions.action" %></th>
                  </tr>
              </thead>
              <tbody>
                <% @news.each do |news|%>
                  <tr class="news-<%=news.id%>">
                    <td><%= news.id %></td>
                    <td><%= news.title %></td>
                    <td>
                      <%= link_to admin_news_path(news), method: :delete, remote: true, data: {confirm: "Bạn chắc chắn muốn xóa ?"},
                        class: "btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i><%= t "admin.actions.remove" %>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
        <div class="panel-footer">
          <%= paginate @news,:theme => 'twitter-bootstrap-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
