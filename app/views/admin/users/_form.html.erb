<%= form_for([:admin, @user], html: { class: "form-horizontal form-bordered form-control-borderless", style: "padding-top: 20px" }, remote: true) do |f| %>
<div class="form-group">
  <%= f.label :name, t("admin.user.name"), class: "col-md-3 control-label" %>
  <div class="col-md-5">
    <%= f.text_field :name, class: "form-control", placeholder: t("admin.user.name") %>
  </div>
</div>
<div class="form-group">
  <%= f.label :email, "Email", class: "col-md-3 control-label" %>
  <div class="col-md-5">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, t("admin.user.password"), class: "col-md-3 control-label" %>
  <div class="col-md-5">
    <%= f.password_field :password, class: "form-control", placeholder: t("admin.user.password") %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password_confirmation, t("admin.user.password_confirmation"), class: "col-md-3 control-label" %>
  <div class="col-md-5">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: t("admin.user.password_confirmation") %>
  </div>
</div>
<div class="form-group form-actions">
  <div class="col-md-9 col-md-offset-3">
    <%= f.submit yield(:button_text), class: "btn btn-sm btn-primary" %>
  </div>
</div>
<% end %>
