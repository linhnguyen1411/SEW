<div class="tab-v1">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#list" data-toggle="tab">Danh sách</a></li>
    <li>
      <%= link_to new_admin_category_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i> Thêm mới
      <% end %>
    </li>
  </ul>
  <div class="tab-content">
    <div class="tab-pane fade in active" id="list">
      <div class="panel panel-red margin-bottom-40">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-user"></i> Danh sách danh mục tin </h3>
        </div>
        <div class="panel-body">
          <table class="table">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>Danh mục</th>
                      <th>Hành động</th>
                  </tr>
              </thead>
              <tbody>
                <% @categories.each do |c|%>
                  <tr class="c-<%=c.id%>">
                    <td><%= c.id %></td>
                    <td><%= c.name %></td>
                    <td>
                      <%= link_to edit_admin_category_path(c.id), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><%= t "admin.actions.edit" %><% end %>
                      <%= link_to admin_category_path(c), method: :delete, remote: true, data: {confirm: "Bạn chắc chắn muốn xóa ?"},
                        class: "btn btn-danger btn-xs" do %>
                          <i class="fa fa-trash-o"></i><%= t "admin.actions.remove" %>
                        <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
          </table>
        </div>
        <div class="panel-footer">
          <%= paginate @categories, :theme => 'twitter-bootstrap-3' %>
        </div>
      </div>
    </div>
  </div>
</div>
