<% if current_user.user_videos.present? %>
  <% current_user.user_videos.each do |uv| %>
    <tr class="uv-<%=uv.id%>">
      <td><%= uv.title %></td>
      <td>
        <%= raw uv.url %>
      </td>
      <td>
        <%= link_to edit_user_video_path(uv.id),remote: true, class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i>Sửa<% end %>
        <%= link_to user_video_path(uv), method: :delete, remote: true, data: {confirm: "Bạn chắc chắn muốn xóa ?"},
          class: "btn btn-danger btn-xs" do %>
            <i class="fa fa-trash-o"></i>Xóa
          <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
<% end %>
